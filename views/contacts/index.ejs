<!DOCTYPE html>
<html lang="cs">

<head>
    <%- include("../partials/head") %>
</head>

<body id="page-top">

<div id="wrapper">
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <%- include("../partials/navbar") %>

            <div class="container-fluid">

                <%- include("../partials/flash") %>

                <div class="row">
                    <div class="col-auto">
                        <h1 class="h3 mb-2 text-gray-800">Aplikace Kontakty</h1>
                        <p class="mb-4">
                            Zde je seznam Vašich kontaktů.
                        </p>
                    </div>
                    <div class="col-auto ml-auto my-auto">
                        <a href="/contacts/new">
                            <button class="btn btn-primary" type="button">Nový kontakt</button>
                        </a>
                    </div>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Seznam kontaktů</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Jméno</th>
                                    <th>Příjmení</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Akce</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for (let c of contacts) { %>
                                    <tr>
                                        <td><%= c.name %></td>
                                        <td><%= c.surname %></td>
                                        <td><%= c.email %></td>
                                        <td><%= c.phone %></td>
                                        <td class="text-right">
                                            <a style="display: inline-block" class="btn btn-success" href="/contacts/<%= c.id %>">ZOBRAZIT</a>
                                            <a style="display: inline-block" class="btn btn-warning" href="/contacts/<%= c.id %>/edit">UPRAVIT</a>
                                            <form style="display: inline-block" action="/contacts/<%= c.id%>?_method=DELETE" method="post">
                                                <button class="btn btn-danger">ODSTRANIT</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include("../partials/footer") %>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include("../partials/scripts") %>

</body>

</html>